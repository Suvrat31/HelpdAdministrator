<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="24dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/user"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginTop="16dp"
            android:src="@drawable/user"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="20dp"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColorHint="#000000"
            android:background="@drawable/style"
            android:id="@+id/name"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get started"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#afafaf"
            android:layout_marginBottom="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="DOB"
            android:layout_margin="8dp"
            android:inputType="date"
            android:padding="8dp"
            android:background="@drawable/style"
            android:textColorHint="#000000"
            android:id="@+id/dob"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Gender"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:inputType="text"
            android:background="@drawable/style"
            android:textColorHint="#000000"
            android:id="@+id/gender"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Phone Number 1"
                android:layout_margin="8dp"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="8dp"
                android:background="@drawable/style"
                android:textColorHint="#000000"
                android:id="@+id/phonenumber1"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Phone Number 2"
                android:inputType="phone"
                android:layout_margin="8dp"
                android:maxLength="10"
                android:padding="8dp"
                android:background="@drawable/style"
                android:textColorHint="#000000"
                android:id="@+id/phonenumber2"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="Address"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#afafaf"
            android:layout_marginBottom="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Address 1"
                android:inputType="text"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="@drawable/style"
                android:textColorHint="#000000"
                android:id="@+id/address1"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="8dp"
                android:hint="Address 2"
                android:inputType="text"
                android:padding="8dp"
                android:background="@drawable/style"
                android:textColorHint="#000000"
                android:id="@+id/address2"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="8dp"
                android:hint="Landmark"
                android:inputType="text"
                android:padding="8dp"
                android:background="@drawable/style"
                android:textColorHint="#000000"
                android:id="@+id/landmark"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="State"
                android:layout_margin="8dp"
                android:inputType="text"
                android:padding="8dp"
                android:background="@drawable/style"
                android:textColorHint="#000000"
                android:id="@+id/state"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:hint="City/Town"
                android:inputType="text"
                android:padding="8dp"
                android:background="@drawable/style"
                android:textColorHint="#000000"
                android:id="@+id/city"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#afafaf"
            android:layout_marginBottom="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Aadhar Number"
                android:gravity="center"
                android:layout_margin="8dp"
                android:maxLength="12"
                android:inputType="number"
                android:padding="8dp"
                android:background="@drawable/style"
                android:textColorHint="#000000"
                android:id="@+id/aadharnumber"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="8dp"
                android:hint="Pan Number"
                android:maxLength="10"
                android:inputType="number"
                android:padding="8dp"
                android:background="@drawable/style"
                android:textColorHint="#000000"
                android:id="@+id/pannumber"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:hint="Transportation"
                    android:inputType="text"
                    android:padding="8dp"
                    android:background="@drawable/style"
                    android:textColorHint="#000000"
                    android:id="@+id/transportation"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:hint="Have Bank Account?"
                    android:inputType="text"
                    android:padding="8dp"
                    android:background="@drawable/style"
                    android:textColorHint="#000000"
                    android:id="@+id/bankaccount"/>
            </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="8dp"
                    android:hint="Preferred mode of payment"
                    android:layout_marginBottom="32dp"
                    android:padding="8dp"
                    android:background="@drawable/style"
                    android:textColorHint="#000000"
                    android:id="@+id/modeofpayment"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/submit"
            />
    </LinearLayout>

</ScrollView>